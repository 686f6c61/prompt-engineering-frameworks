# API Key para OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Clave secreta para Flask
FLASK_SECRET_KEY=generate_a_secure_random_key_here

# API Key para Resend (envío de correos)
RESEND_API_KEY=your_resend_api_key_here

# Configuración de correos electrónicos
EMAIL_FROM=Prompt Agent <hola@yourdomain.com>
EMAIL_TO=your_email@example.com

# Configuración de entorno
FLASK_ENV=production
PORT=3000


# Administrador por defecto (se crea al iniciar la aplicación)
ADMIN_EMAIL=admin@example.com

# Clave para generar tokens JWT
JWT_SECRET_KEY=generate_a_secure_random_key_here 

# Códigos promocionales para límite extendido
PROMO_CODE1=CODIGO_01
PROMO_CODE2=CODIGO_02